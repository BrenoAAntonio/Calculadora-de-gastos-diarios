<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".CalculadoraActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvAppTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculadora"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/cardHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvOperation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#757575"
                android:textAlignment="textEnd"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardButtons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/cardDisplay"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:rowCount="5"
            android:padding="8dp">

            <Button
                android:id="@+id/btnClear"
                style="@style/CalculatorButtonStyle"
                android:text="C"
                android:textColor="@color/red_primary"/>

            <Button
                android:id="@+id/btnParentheses"
                style="@style/CalculatorButtonStyle"
                android:text="( )"/>

            <Button
                android:id="@+id/btnPercent"
                style="@style/CalculatorButtonStyle"
                android:text="%"/>

            <Button
                android:id="@+id/btnDivide"
                style="@style/CalculatorButtonStyleOperator"
                android:text="÷"/>

            <Button
                android:id="@+id/btnSeven"
                style="@style/CalculatorButtonStyle"
                android:text="7"/>

            <Button
                android:id="@+id/btnEight"
                style="@style/CalculatorButtonStyle"
                android:text="8"/>

            <Button
                android:id="@+id/btnNine"
                style="@style/CalculatorButtonStyle"
                android:text="9"/>

            <Button
                android:id="@+id/btnMultiply"
                style="@style/CalculatorButtonStyleOperator"
                android:text="×"/>

            <Button
                android:id="@+id/btnFour"
                style="@style/CalculatorButtonStyle"
                android:text="4"/>

            <Button
                android:id="@+id/btnFive"
                style="@style/CalculatorButtonStyle"
                android:text="5"/>

            <Button
                android:id="@+id/btnSix"
                style="@style/CalculatorButtonStyle"
                android:text="6"/>

            <Button
                android:id="@+id/btnSubtract"
                style="@style/CalculatorButtonStyleOperator"
                android:text="-"/>

            <Button
                android:id="@+id/btnOne"
                style="@style/CalculatorButtonStyle"
                android:text="1"/>

            <Button
                android:id="@+id/btnTwo"
                style="@style/CalculatorButtonStyle"
                android:text="2"/>

            <Button
                android:id="@+id/btnThree"
                style="@style/CalculatorButtonStyle"
                android:text="3"/>

            <Button
                android:id="@+id/btnAdd"
                style="@style/CalculatorButtonStyleOperator"
                android:text="+"/>

            <Button
                android:id="@+id/btnPlusMinus"
                style="@style/CalculatorButtonStyle"
                android:text="±"/>

            <Button
                android:id="@+id/btnZero"
                style="@style/CalculatorButtonStyle"
                android:text="0"/>

            <Button
                android:id="@+id/btnDecimal"
                style="@style/CalculatorButtonStyle"
                android:text="."/>

            <Button
                android:id="@+id/btnEquals"
                style="@style/CalculatorButtonStyleEquals"
                android:text="="/>
        </GridLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bottom_nav_background"
        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>