<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.CalculadoraDeGastos" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/green_medium</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowBackground">@color/background_light</item>
    </style>
    <style name="CalculatorButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="CalculatorButtonStyleOperator" parent="CalculatorButtonStyle">
        <item name="android:textColor">@color/green_primary</item>
    </style>

    <style name="CalculatorButtonStyleEquals" parent="CalculatorButtonStyle">
        <item name="android:backgroundTint">@color/green_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.CalculadoraDeGastosDiários" parent="Base.Theme.CalculadoraDeGastos" />

    <style name="Theme.CalculadoraDeGastosDiários.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CalculadoraDeGastosDiários.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>